# หลายบอทคั่นด้วย ,
TOKENS=bot_token_1,bot_token_2

# Health server (ต้องตรงกับ WEBSITES_PORT เมื่อใช้ Container)
PORT=3001

# ค้างห้อง + auto rejoin หลังรีสตาร์ต
STAY_24_7=true

# Auto deploy slash commands ตอน start
AUTO_DEPLOY=true
FORCE_DEPLOY=false

# Allowlist (เห็น/ใช้คำสั่ง แม้ไม่ใช่ Admin)
SPECIAL_USER_IDS=
SPECIAL_ROLE_IDS=
